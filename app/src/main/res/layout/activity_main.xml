<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/emergency"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medicine, Blood"
        android:gravity="center"
        android:textSize="32sp"
        android:textColor="#008996"
        android:layout_marginBottom="50dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/medicineButtonId"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Medicine"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#673AB7"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/bloodButtonId"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Blood"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#673AB7"
            />


    </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ContactUs"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Contact Us"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00BCD4"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/aboutUs"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="About Us"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#00BCD4"
            />


        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signInSignUpId"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Sign In/Sign Up"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#8303A9F4"
            android:layout_marginRight="10dp"
            />


        <Button
            android:id="@+id/emergencyJoinId"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:text="Emergency Join"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#F44336"
            />

</LinearLayout>


    </LinearLayout>



